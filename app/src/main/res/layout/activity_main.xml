<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.maiatday.hellorealm.ui.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/text_first_mood"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"/>

    <Button
        android:id="@+id/button_update_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me"
        android:onClick="onClick"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="98dp"
        app:layout_constraintLeft_toRightOf="@+id/text_main"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/button_update_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Me"
        android:onClick="onClick"
        tools:layout_constraintTop_creator="1"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/text_first_mood"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintVertical_bias="0.502"
        app:layout_constraintLeft_toRightOf="@+id/text_worker"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"/>

    <EditText
        android:id="@+id/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Note"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_update_main"
        tools:layout_constraintBaseline_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_update_main"/>

    <EditText
        android:id="@+id/text_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Note"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_update_worker"
        tools:layout_constraintBaseline_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_update_worker"/>

    <TextView
        android:id="@+id/label_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Thread"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/text_worker"
        app:layout_constraintRight_toRightOf="@+id/text_worker"
        android:layout_marginBottom="8dp"
        />

    <TextView
        android:id="@+id/label_worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Worker Thread"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/text_main"
        app:layout_constraintRight_toRightOf="@+id/text_main"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_first_mood"
        app:layout_constraintVertical_bias="1.0"
        />

</android.support.constraint.ConstraintLayout>
